.container
  .gray.center.editprofile
    %h2.text-center Edit #{resource_name.to_s.humanize}
    - if @user.avatar?
      .text-center.avatar= image_tag @user.avatar.url(:thumb)

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      .form-group
        = f.input :email, label: 'e-mail'
      .form-group
        = f.input :current_password
        %i (we need your current password to confirm your changes)
      .form-group
        = f.input :password, label: 'New password'
      .form-group
        = f.input :password_confirmation, label: 'Confirm new password'
      .form-group
        = f.file_field :avatar
      .actions.text-center
        = f.submit "Update", class: "btn btn-success"
    %br
      %br
      .row
        .col
          = link_to "Home", :root, class: "btn btn-primary"
        .col
          = link_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "normal-text btn btn-danger"
      %br