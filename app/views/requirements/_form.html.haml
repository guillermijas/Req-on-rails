= form_for @requirement do |f|
  - if @requirement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@requirement.errors.count, "error")} prohibited this requirement from being saved:"
      %ul
        - @requirement.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :suffix
    = f.text_field :suffix
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :end_date
    = f.date_select :end_date
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :level
    = f.text_field :level
  .actions
    = f.submit 'Save'
