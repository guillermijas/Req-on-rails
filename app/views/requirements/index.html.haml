%h1 Listing requirements

%table
  %thead
    %tr
      %th Description
      %th Sufix
      %th Status
      %th Category
      %th End date
      %th
      %th
      %th

  %tbody
    - @requirements.each do |requirement|
      %tr
        %td= requirement.description
        %td= requirement.sufix
        %td= requirement.status
        %td= requirement.category
        %td= requirement.end_date
        %td= link_to 'Show', [@project, requirement]
        %td= link_to 'Edit', edit_project_requirement_path(@project, requirement)
        %td= link_to 'Destroy', [@project, requirement], method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Requirement', new_project_requirement_path(@project)
