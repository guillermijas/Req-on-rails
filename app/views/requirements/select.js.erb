$("#table-requirements").html("<%= j(render partial: 'requirements') %>");

var row = $("#<%= @requirement.id_string %>");
var req = $('#requirements')

if (row.length !== 0) {
  <%- if @scroll %>
  req.scrollTop(req.position());
  var pos = row.position().top - 120;
  req.scrollTop(pos);
  <%- end %>
  row.addClass('highlight');
}

