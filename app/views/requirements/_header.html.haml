.row.align-items-center
  .col
    %h2
      = icon('folder-open-o')
      = @project.name
  .col.text-center
    - users = ''
    - @project.users.each do |user|
      - users += user.full_name + ', '
    %button{'data-toggle': 'popover', 'data-html': 'true', title: 'Paarticipantes', 'data-content': "#{users[0..-3]}", 'data-placement': 'bottom'}
      = icon('user')

  .col.text-center
    - done = "Hechos: #{@requirements.where(status: 'done').count}/#{@requirements.count}</br>"
    - in_proccess = "En proceso: #{@requirements.where(status: 'in_process').count}/#{@requirements.count}</br>"
    - rejected = "Rechazados: #{@requirements.where(status: 'rejected').count}/#{@requirements.count}</br>"
    - verifying = "Verificando: #{@requirements.where(status: 'verifying').count}/#{@requirements.count}</br>"
    - pending = "Pendiente: #{@requirements.where(status: 'pending').count}/#{@requirements.count}</br>"
    - msg = done + in_proccess + rejected + verifying + pending
    %button{'data-toggle': 'popover', 'data-html': 'true', title: 'Estad√≠sticas', 'data-content': "#{msg}", 'data-placement': 'bottom'}
      = icon('bar-chart-o')

  .col.text-right
    %h2
      = link_to projects_path do
        =icon('arrow-left')
        Volver