.modal.face#modal_show
  .modal-dialog{role: 'document'}
    .modal-content
      .modal-header
        %h5.modal-title= @project.name
        %button.close{'aria-label': 'Close', 'data-dismiss': 'modal', type: 'button'}
          %span{'aria-hidden': 'true'} Ã—
      .modal-body
        %p
          %b Name:
          = @project.name
        %p
          %b Client:
          = @project.client
        %p
          %b End date:
          = @project.end_date
        %p
          %b Status:
          = @project.status

      .modal-footer
        = link_to 'Editar', edit_project_path(@project), class: 'btn btn-primary'
        %button.btn.btn-secondary{'data-dismiss': 'modal', type: 'button'} Cerrar